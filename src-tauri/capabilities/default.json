{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main-capability",
  "local": true,
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:app:default",
    "core:event:default",
    "updater:default",
    "dialog:default",
    "fs:default",
    {
      "identifier": "fs:read-all",
      "allow": [
        {
          "path": "$DATA/**"
        }
      ]
    },
    {
      "identifier": "fs:write-all",
      "allow": [
        {
          "path": "$DATA/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$DATA/**"
        }
      ]
    }
  ]
}